<h1>Listing purchases</h1>

<table class='table table-striped table-condensed table-bordered'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Purchase date</th>
      <th>Warranty duration</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.title %></td>
        <td><%= purchase.description %></td>
        <td><%= purchase.purchase_date %></td>
        <td><%= purchase.warranty_duration %></td>
        <td><%= link_to 'Show', purchase, class: 'btn' %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase), class: 'btn' %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Purchase', new_purchase_path, class: 'btn' %>
